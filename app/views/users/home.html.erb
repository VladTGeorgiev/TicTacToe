  <%= link_to "Continue a game", room_path(@cont_room)%>
<% end %>
<br>
<%= link_to "Start a game", new_room_path %>
<br>
<%= link_to 'Edit user', edit_user_path(curr_user) %>
<br>

<table>
  <tr>
    <td>Win:</td>
